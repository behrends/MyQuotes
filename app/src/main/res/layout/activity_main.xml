<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/quote_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="36sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            tools:text="Nichts ist so bestÃ¤ndig wie der Wandel."/>
    <TextView
            android:id="@+id/quote_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/quote_text"
            app:layout_constraintTop_toBottomOf="@+id/quote_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            tools:text="-- Heraklit"/>
    <TextView
            android:id="@+id/quote_year"
            android:layout_width="0dp"
            android:layout_height="18dp"
            app:layout_constraintTop_toBottomOf="@+id/quote_author"
            app:layout_constraintEnd_toEndOf="@+id/quote_author"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            tools:text="480 v. Chr."/>
    <Button
            android:id="@+id/quote_next"
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/quote_previous"
            android:layout_marginBottom="24dp"
            android:onClick="nextQuote"/>
    <Button
            android:id="@+id/quote_previous"
            android:text="@string/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/quote_next"
            app:layout_constraintTop_toTopOf="@+id/quote_next"
            android:onClick="previousQuote"/>

</androidx.constraintlayout.widget.ConstraintLayout>